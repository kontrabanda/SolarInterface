<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/solar_panel"
    android:gravity="center">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="4"
        android:useDefaultMargins="true">

        <GridLayout
            android:background="@drawable/gradient_radio"
            android:layout_row="0"
            android:layout_column="0"
            android:rowCount="2">


            <TextView
                android:height="100dp"
                android:width="200dp"
                android:background="@drawable/gradient_linear"
                android:text="Text"
                android:textStyle="normal|bold"
                android:gravity="center"
                android:id="@+id/acceleration_name"
                android:textSize="26dp"/>

            <TextView
                android:height="100dp"
                android:width="200dp"
                android:background="@drawable/gradient_linear_view"
                android:text="0"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center"
                android:textSize="30dp"
                android:id="@+id/acceleration_value"/>

        </GridLayout>

        <GridLayout
            android:background="@drawable/gradient_radio"
            android:layout_row="0"
            android:layout_column="1"
            android:rowCount="2">


            <TextView
                android:height="100dp"
                android:width="200dp"
                android:background="@drawable/gradient_linear"
                android:text="Text"
                android:textStyle="normal|bold"
                android:gravity="center"
                android:textSize="26dp"
                android:id="@+id/angle_name"/>

            <TextView
                android:height="100dp"
                android:width="200dp"
                android:background="@drawable/gradient_linear_view"
                android:text="0"
                android:textSize="30dp"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center"
                android:id="@+id/angle_value"/>

        </GridLayout>

        <GridLayout
            android:background="@drawable/gradient_radio"
            android:layout_row="0"
            android:layout_column="2"
            android:rowCount="2">


            <TextView
                android:height="100dp"
                android:width="200dp"
                android:background="@drawable/gradient_linear"
                android:text="Text"
                android:textSize="26dp"
                android:textStyle="normal|bold"
                android:gravity="center"
                android:id="@+id/battery_voltage_name"/>

            <TextView
                android:height="100dp"
                android:width="200dp"
                android:background="@drawable/gradient_linear_view"
                android:text="0"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center"
                android:textSize="30dp"
                android:id="@+id/battery_voltage_value"/>

        </GridLayout>

        <GridLayout
            android:background="@drawable/gradient_radio"
            android:layout_row="0"
            android:layout_column="3"
            android:rowCount="2">


            <TextView
                android:height="100dp"
                android:width="200dp"
                android:background="@drawable/gradient_linear"
                android:text="Text"
                android:textStyle="normal|bold"
                android:gravity="center"
                android:textSize="26dp"
                android:id="@+id/battery_current_name"/>

            <TextView
                android:height="100dp"
                android:width="200dp"
                android:background="@drawable/gradient_linear_view"
                android:text="0"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center"
                android:textSize="30dp"
                android:id="@+id/battery_current_value"/>

        </GridLayout>

        <GridLayout
            android:background="@drawable/gradient_radio"
            android:layout_row="1"
            android:layout_column="0"
            android:rowCount="2">


            <TextView
                android:height="100dp"
                android:width="200dp"
                android:background="@drawable/gradient_linear"
                android:text="Text"
                android:textStyle="normal|bold"
                android:gravity="center"
                android:textSize="26dp"
                android:id="@+id/solar_voltage_name"/>

            <TextView
                android:height="100dp"
                android:width="200dp"
                android:background="@drawable/gradient_linear_view"
                android:text="0"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center"
                android:textSize="30dp"
                android:id="@+id/solar_voltage_value"/>

        </GridLayout>


        <GridLayout
            android:background="@drawable/gradient_radio"
            android:layout_row="1"
            android:layout_column="1"
            android:rowCount="2">


            <TextView
                android:height="100dp"
                android:width="200dp"
                android:background="@drawable/gradient_linear"
                android:text="Text"
                android:textStyle="normal|bold"
                android:gravity="center"
                android:textSize="26dp"
                android:id="@+id/engine_power_name"/>

            <TextView
                android:height="100dp"
                android:width="200dp"
                android:background="@drawable/gradient_linear_view"
                android:text="0"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center"
                android:textSize="30dp"
                android:id="@+id/engine_power_value"/>

        </GridLayout>

        <GridLayout
            android:background="@drawable/gradient_radio"
            android:layout_row="1"
            android:layout_column="2"
            android:rowCount="2">


            <TextView
                android:height="100dp"
                android:width="200dp"
                android:background="@drawable/gradient_linear"
                android:text="Text"
                android:textStyle="normal|bold"
                android:gravity="center"
                android:textSize="26dp"
                android:id="@+id/speed_name"/>

            <TextView
                android:height="100dp"
                android:width="200dp"
                android:background="@drawable/gradient_linear_view"
                android:text="0"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center"
                android:textSize="30dp"
                android:id="@+id/speed_value"/>

        </GridLayout>

        <GridLayout
            android:background="@drawable/gradient_radio"
            android:layout_row="1"
            android:layout_column="3"
            android:rowCount="2">


            <TextView
                android:height="100dp"
                android:width="200dp"
                android:background="@drawable/gradient_linear"
                android:text="Text"
                android:textStyle="normal|bold"
                android:gravity="center"
                android:textSize="26dp"
                android:id="@+id/battery_charge_name"/>

            <TextView
                android:height="100dp"
                android:width="200dp"
                android:background="@drawable/gradient_linear_view"
                android:text="0"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center"
                android:textSize="30dp"
                android:id="@+id/battery_charge_value"/>

        </GridLayout>

    </GridLayout>


</RelativeLayout>